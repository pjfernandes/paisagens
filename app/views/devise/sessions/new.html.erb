<!-- app/views/devise/sessions/new.html.erb -->
<div class="container mt-5">
  <div class="text-center mb-5" >
    <%= image_tag("logo2.png", alt: "Paisagens Geomorfológicas do Brasil", style: "height: 200px;")  %>
    <section class="text-center mt-3">
      <h2>Paisagens Geomorfológicas do Brasil</h2>
    </section>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center bg-primary text-white">
          <h2><i class="fas fa-sign-in-alt"></i> Log in</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource_name, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.input :email, required: false, autofocus: true, label_html: { class: 'sr-only' }, input_html: { class: 'form-control', placeholder: 'Email' } %>
            </div>
            <div class="form-group">
              <%= f.input :password, required: false, label_html: { class: 'sr-only' }, input_html: { class: 'form-control', placeholder: 'Password' } %>
            </div>
            <div class="form-group text-center">
              <%= f.button :submit, class: "btn btn-primary" do %>
                <i class="fas fa-sign-in-alt"></i> Log in
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
