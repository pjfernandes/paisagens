<div class="login-form">
  <h2><i class="fas fa-sign-in-alt"></i> Log in</h2>
  <%= simple_form_for(resource_name, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, label_html: { class: 'sr-only' } %>
      <%= f.input :password, required: false, label_html: { class: 'sr-only' } %>
    </div>
    <%= f.button :submit, "Log in", class: "btn btn-primary btn-block mt-3" %>
  <% end %>
</div>
